{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "jsx": "preserve",
        "jsxImportSource": "astro"
    },
    "include": [
        "src/env.d.ts",
        "src/shims.d.ts",
        "src/**/*.astro",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}