---
/**
 * Drawer Component
 *
 * Slide-in drawer/sidebar component with backdrop, keyboard support,
 * and body scroll locking. Uses Alpine.js for state management.
 *
 * @component
 * @example
 * ```astro
 * <Drawer placement="right">
 *   <button slot="trigger" class="btn-primary">Open Menu</button>
 *   <nav>
 *     <a href="/">Home</a>
 *     <a href="/about">About</a>
 *   </nav>
 * </Drawer>
 * ```
 */

export interface Props {
    /** Drawer slide direction */
    placement?: "left" | "right" | "top" | "bottom";
    /** Drawer width (for left/right) or height (for top/bottom) */
    size?: string;
    /** Close drawer when clicking backdrop */
    closeOnBackdrop?: boolean;
    /** Close drawer when pressing Escape */
    closeOnEscape?: boolean;
    /** Show close button inside drawer */
    showCloseButton?: boolean;
    /** Additional CSS classes */
    class?: string;
}

const {
    placement = "right",
    size = "20rem",
    closeOnBackdrop = true,
    closeOnEscape = true,
    showCloseButton = true,
    class: className = "",
} = Astro.props;

// Determine transition classes based on placement
const transitionClasses = {
    left: "translate-x-[-100%]",
    right: "translate-x-[100%]",
    top: "translate-y-[-100%]",
    bottom: "translate-y-[100%]",
};

const positionClasses = {
    left: "left-0 top-0 h-full",
    right: "right-0 top-0 h-full",
    top: "top-0 left-0 w-full",
    bottom: "bottom-0 left-0 w-full",
};

const sizeStyles =
    placement === "left" || placement === "right"
        ? `width: ${size}; max-width: 100%;`
        : `height: ${size}; max-height: 100%;`;
---

<div x-data="{ drawerOpen: false }">
    <!-- Trigger Slot -->
    <div @click="drawerOpen = true">
        <slot name="trigger" />
    </div>

    <!-- Drawer Portal -->
    <template x-teleport="body">
        <div
            class="fixed inset-0"
            style="z-index: 9999;"
            x-show="drawerOpen"
            x-cloak
            role="dialog"
            aria-modal="true"
            {...closeOnEscape && {
                "@keydown.escape.window": "drawerOpen = false",
            }}
            x-effect="drawerOpen ? document.body.style.overflow = 'hidden' : document.body.style.overflow = ''"
        >
            <!-- Backdrop -->
            <div
                class="absolute inset-0 bg-black/50 backdrop-blur-sm"
                x-show="drawerOpen"
                x-transition:enter="transition ease-out duration-300"
                x-transition:enter-start="opacity-0"
                x-transition:enter-end="opacity-100"
                x-transition:leave="transition ease-in duration-200"
                x-transition:leave-start="opacity-100"
                x-transition:leave-end="opacity-0"
                {...closeOnBackdrop && { "@click": "drawerOpen = false" }}
            >
            </div>

            <!-- Drawer Panel -->
            <div
                class:list={[
                    "drawer-panel",
                    "absolute",
                    positionClasses[placement],
                    className,
                ]}
                style={sizeStyles}
                x-show="drawerOpen"
                x-transition:enter="transition transform ease-out duration-300"
                x-transition:enter-start={transitionClasses[placement]}
                x-transition:enter-end="translate-x-0 translate-y-0"
                x-transition:leave="transition transform ease-in duration-300"
                x-transition:leave-start="translate-x-0 translate-y-0"
                x-transition:leave-end={transitionClasses[placement]}
            >
                <!-- Close Button -->
                {
                    showCloseButton && (
                        <button
                            @click="drawerOpen = false"
                            class="drawer-close-btn"
                            aria-label="Close drawer"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M6 18L18 6M6 6l12 12"
                                />
                            </svg>
                        </button>
                    )
                }

                <!-- Scrollable Content -->
                <div class="drawer-content">
                    <slot />
                </div>

                <!-- Footer Slot -->
                {
                    Astro.slots.has("footer") && (
                        <div class="drawer-footer">
                            <slot name="footer" />
                        </div>
                    )
                }
            </div>
        </div>
    </template>
</div>

<style>
    .drawer-panel {
        background: var(--bg-base);
        box-shadow: var(--shadow-2xl);
        border: 1px solid var(--border-primary);
        display: flex;
        flex-direction: column;
    }

    .drawer-close-btn {
        position: absolute;
        top: 1rem;
        right: 1rem;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        background: var(--bg-elevated);
        border: 1px solid var(--border-primary);
        border-radius: 0.75rem;
        color: var(--text-primary);
        cursor: pointer;
        transition: all var(--transition-base);
    }

    .drawer-close-btn:hover {
        background: var(--color-primary);
        color: white;
        transform: scale(1.05);
    }

    .drawer-close-btn:active {
        transform: scale(0.95);
    }

    .drawer-close-btn:focus-visible {
        outline: 2px solid var(--color-accent);
        outline-offset: 2px;
    }

    .drawer-content {
        flex: 1;
        padding: 4rem 2rem 2rem;
        overflow-y: auto;
        -webkit-overflow-scrolling: touch;
    }

    .drawer-footer {
        padding: 1.5rem 2rem;
        border-top: 1px solid var(--border-secondary);
        background: var(--bg-elevated);
    }

    /* Alpine.js cloak */
    [x-cloak] {
        display: none !important;
    }

    /* Reduced Motion */
    @media (prefers-reduced-motion: reduce) {
        .drawer-close-btn {
            transition: none !important;
        }

        .drawer-close-btn:hover,
        .drawer-close-btn:active {
            transform: none !important;
        }
    }
</style>
