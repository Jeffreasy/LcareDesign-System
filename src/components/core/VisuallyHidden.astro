---
/**
 * VisuallyHidden Component
 *
 * Hides content visually but keeps it accessible to screen readers
 *
 * @component
 */

export interface Props {
    class?: string;
}

const { class: className = "" } = Astro.props;
---

<span class:list={["sr-only", className]}>
    <slot />
</span>

<style>
    /* Ensure sr-only is defined if not using Tailwind */
    .sr-only:not([class*="sr-only"]) {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }
</style>
