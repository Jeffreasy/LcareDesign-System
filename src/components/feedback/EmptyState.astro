---
/**
 * EmptyState Component
 *
 * Display when no content/data is available
 *
 * @component
 */

export interface Props {
    icon?: string;
    title: string;
    description?: string;
    actionText?: string;
    actionHref?: string;
    size?: "sm" | "md" | "lg";
    class?: string;
}

const {
    icon,
    title,
    description,
    actionText,
    actionHref,
    size = "md",
    class: className = "",
} = Astro.props;

const sizeClasses = {
    sm: {
        icon: "w-12 h-12",
        title: "text-lg",
        description: "text-sm",
        padding: "p-8",
    },
    md: {
        icon: "w-16 h-16",
        title: "text-xl",
        description: "text-base",
        padding: "p-12",
    },
    lg: {
        icon: "w-20 h-20",
        title: "text-2xl",
        description: "text-lg",
        padding: "p-16",
    },
};

const config = sizeClasses[size];
---

<div
    class:list={[
        "flex flex-col items-center justify-center text-center",
        config.padding,
        className,
    ]}
>
    {
        icon && (
            <div
                class:list={[
                    "flex items-center justify-center rounded-full bg-elevated mb-6",
                    config.icon,
                ]}
            >
                <span class="text-4xl" aria-hidden="true">
                    {icon}
                </span>
            </div>
        )
    }

    <h3
        class:list={["font-bold mb-3", config.title]}
        style="color: var(--text-primary);"
    >
        {title}
    </h3>

    {
        description && (
            <p
                class:list={["max-w-md mb-6", config.description]}
                style="color: var(--text-secondary);"
            >
                {description}
            </p>
        )
    }

    {
        actionText && actionHref && (
            <a href={actionHref} class="btn-primary">
                {actionText}
            </a>
        )
    }

    <slot />
</div>
