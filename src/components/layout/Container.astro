---
/**
 * Container Component
 *
 * Astro wrapper around .container-custom class
 *
 * @component
 */

export interface Props {
    size?: "sm" | "md" | "lg" | "xl" | "full";
    spacing?: "none" | "sm" | "md" | "lg";
    class?: string;
}

const { size = "lg", spacing = "md", class: className = "" } = Astro.props;

const sizeClasses = {
    sm: "max-w-3xl",
    md: "max-w-5xl",
    lg: "max-w-7xl",
    xl: "max-w-screen-2xl",
    full: "max-w-full",
};

const spacingClasses = {
    none: "",
    sm: "section-spacing-xs",
    md: "section-spacing-sm",
    lg: "section-spacing",
};
---

<div
    class:list={[
        "mx-auto px-4 sm:px-6 lg:px-8",
        sizeClasses[size],
        spacingClasses[spacing],
        className,
    ]}
>
    <slot />
</div>
