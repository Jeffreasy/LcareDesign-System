---
/**
 * Stack Component
 *
 * Flexbox layout primitive for stacking items vertically or horizontally
 *
 * @component
 */

export interface Props {
    direction?: "vertical" | "horizontal";
    gap?: "none" | "xs" | "sm" | "md" | "lg" | "xl";
    align?: "start" | "center" | "end" | "stretch";
    justify?: "start" | "center" | "end" | "between" | "around";
    wrap?: boolean;
    class?: string;
}

const {
    direction = "vertical",
    gap = "md",
    align = "stretch",
    justify = "start",
    wrap = false,
    class: className = "",
} = Astro.props;

const directionClass = direction === "vertical" ? "flex-col" : "flex-row";

const gapClasses = {
    none: "gap-0",
    xs: "gap-2",
    sm: "gap-4",
    md: "gap-6",
    lg: "gap-8",
    xl: "gap-12",
};

const alignClasses = {
    start: "items-start",
    center: "items-center",
    end: "items-end",
    stretch: "items-stretch",
};

const justifyClasses = {
    start: "justify-start",
    center: "justify-center",
    end: "justify-end",
    between: "justify-between",
    around: "justify-around",
};
---

<div
    class:list={[
        "flex",
        directionClass,
        gapClasses[gap],
        alignClasses[align],
        justifyClasses[justify],
        wrap && "flex-wrap",
        className,
    ]}
>
    <slot />
</div>
