---
/**
 * Divider Component
 *
 * Horizontal or vertical divider/separator
 *
 * @component
 */

export interface Props {
    orientation?: "horizontal" | "vertical";
    label?: string;
    variant?: "solid" | "dashed" | "dotted";
    class?: string;
}

const {
    orientation = "horizontal",
    label,
    variant = "solid",
    class: className = "",
} = Astro.props;

const variantClasses = {
    solid: "border-solid",
    dashed: "border-dashed",
    dotted: "border-dotted",
};
---

{
    orientation === "horizontal" ? (
        label ? (
            <div
                class:list={["flex items-center gap-4 my-6", className]}
                role="separator"
            >
                <div
                    class:list={[
                        "flex-1 border-t border-border-primary",
                        variantClasses[variant],
                    ]}
                />
                <span class="text-sm font-medium text-text-tertiary px-2">
                    {label}
                </span>
                <div
                    class:list={[
                        "flex-1 border-t border-border-primary",
                        variantClasses[variant],
                    ]}
                />
            </div>
        ) : (
            <hr
                class:list={[
                    "border-t border-border-primary my-6",
                    variantClasses[variant],
                    className,
                ]}
                role="separator"
            />
        )
    ) : (
        <div
            class:list={[
                "inline-block h-full border-l border-border-primary mx-4",
                variantClasses[variant],
                className,
            ]}
            role="separator"
            aria-orientation="vertical"
        />
    )
}
