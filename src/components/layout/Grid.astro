---
/**
 * Grid Component
 *
 * Responsive grid layout primitive
 *
 * @component
 */

export interface Props {
    cols?: 1 | 2 | 3 | 4 | 6 | 12 | "auto";
    gap?: "none" | "xs" | "sm" | "md" | "lg" | "xl";
    responsive?: boolean;
    class?: string;
}

const {
    cols = "auto",
    gap = "md",
    responsive = true,
    class: className = "",
} = Astro.props;

const colsClasses = {
    1: "grid-cols-1",
    2: responsive ? "grid-cols-1 md:grid-cols-2" : "grid-cols-2",
    3: responsive ? "grid-cols-1 md:grid-cols-2 lg:grid-cols-3" : "grid-cols-3",
    4: responsive ? "grid-cols-1 sm:grid-cols-2 lg:grid-cols-4" : "grid-cols-4",
    6: responsive ? "grid-cols-2 md:grid-cols-3 lg:grid-cols-6" : "grid-cols-6",
    12: "grid-cols-12",
    auto: "grid-cols-[repeat(auto-fit,minmax(250px,1fr))]",
};

const gapClasses = {
    none: "gap-0",
    xs: "gap-2",
    sm: "gap-4",
    md: "gap-6",
    lg: "gap-8",
    xl: "gap-12",
};
---

<div class:list={["grid", colsClasses[cols], gapClasses[gap], className]}>
    <slot />
</div>
