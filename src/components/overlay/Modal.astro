---
/**
 * Modal Component
 *
 * Generic modal dialog with backdrop
 *
 * @component
 */

export interface Props {
    title?: string;
    size?: "sm" | "md" | "lg" | "xl" | "full";
    closeOnEscape?: boolean;
    closeOnBackdrop?: boolean;
    showClose?: boolean;
    class?: string;
}

const {
    title,
    size = "md",
    closeOnEscape = true,
    closeOnBackdrop = true,
    showClose = true,
    class: className = "",
} = Astro.props;

const sizeClasses = {
    sm: "max-w-md",
    md: "max-w-lg",
    lg: "max-w-2xl",
    xl: "max-w-4xl",
    full: "max-w-full mx-4",
};
---

<div
    x-data="{ open: false }"
    @keydown.escape.window={closeOnEscape && "open = false"}
    x-cloak
>
    <!-- Trigger slot -->
    <div @click="open = true">
        <slot name="trigger" />
    </div>

    <!-- Modal -->
    <div
        x-show="open"
        class="fixed inset-0 z-modal overflow-y-auto"
        aria-labelledby="modal-title"
        role="dialog"
        aria-modal="true"
    >
        <!-- Backdrop -->
        <div
            x-show="open"
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
            @click={closeOnBackdrop && "open = false"}
            class="fixed inset-0 bg-black/50 backdrop-blur-sm z-modal-backdrop"
            aria-hidden="true"
        >
        </div>

        <!-- Modal Panel -->
        <div class="flex min-h-full items-center justify-center p-4">
            <div
                x-show="open"
                x-transition:enter="transition ease-out duration-300"
                x-transition:enter-start="opacity-0 transform scale-95"
                x-transition:enter-end="opacity-100 transform scale-100"
                x-transition:leave="transition ease-in duration-200"
                x-transition:leave-start="opacity-100"
                x-transition:leave-end="opacity-0 transform scale-95"
                @click.stop
                class:list={[
                    "relative w-full bg-elevated rounded-2xl shadow-xl z-modal",
                    sizeClasses[size],
                    className,
                ]}
            >
                <!-- Header -->
                {
                    (title || showClose) && (
                        <div class="flex items-center justify-between px-6 py-4 border-b border-border-primary">
                            {title && (
                                <h3
                                    id="modal-title"
                                    class="text-xl font-bold text-text-primary"
                                >
                                    {title}
                                </h3>
                            )}
                            {showClose && (
                                <button
                                    type="button"
                                    @click="open = false"
                                    class="rounded-lg p-2 hover:bg-base transition-colors"
                                    aria-label="Close modal"
                                >
                                    {Astro.slots.has("close-icon") ? (
                                        <slot name="close-icon" />
                                    ) : (
                                        <svg
                                            class="h-5 w-5 text-text-secondary"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M6 18L18 6M6 6l12 12"
                                            />
                                        </svg>
                                    )}
                                </button>
                            )}
                        </div>
                    )
                }

                <!-- Body -->
                <div class="px-6 py-6">
                    <slot />
                </div>

                <!-- Footer slot -->
                {
                    Astro.slots.has("footer") && (
                        <div class="px-6 py-4 border-t border-border-primary bg-base/50 rounded-b-2xl">
                            <slot name="footer" />
                        </div>
                    )
                }
            </div>
        </div>
    </div>
</div>
