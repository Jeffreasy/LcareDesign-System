---
/**
 * Label Component
 *
 * Accessible form label with required indicator
 *
 * @component
 */

export interface Props {
    for: string;
    required?: boolean;
    class?: string;
}

const { for: htmlFor, required = false, class: className = "" } = Astro.props;
---

<label
    for={htmlFor}
    class:list={[
        "block text-sm font-semibold text-text-primary mb-2",
        className,
    ]}
>
    <slot />
    {
        required && (
            <span class="text-error ml-0.5" aria-label="required">
                *
            </span>
        )
    }
</label>
