{
    "name": "@jjalaa/astro-ui",
    "version": "3.0.0",
    "description": "Universal Design System for Astro projects",
    "type": "module",
    "author": "Jeffrey Aalbers",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Jeffreasy/LcareDesign-System.git"
    },
    "keywords": [
        "astro",
        "design-system",
        "ui",
        "components",
        "typescript",
        "tailwind",
        "glassmorphism",
        "theme",
        "brand-presets"
    ],
    "publishConfig": {
        "access": "public"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./components": {
            "types": "./src/components/index.ts",
            "default": "./src/components/index.ts"
        },
        "./utils": {
            "types": "./dist/utils/index.d.ts",
            "import": "./dist/utils/index.js",
            "require": "./dist/utils/index.cjs"
        },
        "./utils/storyblok": {
            "types": "./dist/utils/plugins/storyblok/index.d.ts",
            "import": "./dist/utils/plugins/storyblok/index.js"
        },
        "./css": "./dist/full.css",
        "./css/base": "./dist/base.css",
        "./css/theme": "./dist/theme.css",
        "./css/animations": "./dist/animations.css",
        "./preset": "./tailwind-preset.js",
        "./plugin": "./tailwind-plugin.js",
        "./themes": "./tailwind-themes.js"
    },
    "files": [
        "dist",
        "src/components",
        "src/styles/prose",
        "tailwind-preset.js",
        "tailwind-plugin.js",
        "tailwind-themes.js"
    ],
    "scripts": {
        "build": "tsup && npm run build:css",
        "build:css": "node scripts/build-css.cjs",
        "build:watch": "tsup --watch",
        "dev": "tsup --watch",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "astro": "^5.0.0",
        "tailwindcss": "^3.0.0",
        "alpinejs": "^3.0.0"
    },
    "peerDependenciesMeta": {
        "@storyblok/astro": {
            "optional": true
        },
        "swiper": {
            "optional": true
        }
    },
    "devDependencies": {
        "@types/alpinejs": "^3.0.0",
        "autoprefixer": "^10.4.23",
        "cssnano": "^7.1.2",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "tsup": "^8.5.1",
        "typescript": "^5.0.0"
    }
}