{
    "name": "@laventecare/astro-ui",
    "version": "3.0.4",
    "description": "Universal Design System for Astro projects",
    "type": "module",
    "author": "Jeffrey Aalbers",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Jeffreasy/LcareDesign-System.git"
    },
    "homepage": "https://github.com/Jeffreasy/LcareDesign-System#readme",
    "bugs": {
        "url": "https://github.com/Jeffreasy/LcareDesign-System/issues"
    },
    "keywords": [
        "astro",
        "design-system",
        "ui",
        "components",
        "typescript",
        "tailwind",
        "glassmorphism",
        "theme",
        "brand-presets",
        "accessible",
        "wcag",
        "dark-mode",
        "responsive",
        "ssr"
    ],
    "publishConfig": {
        "access": "public"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./components": {
            "types": "./src/components/index.ts",
            "default": "./src/components/index.ts"
        },
        "./utils": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./utils/storyblok": {
            "types": "./dist/plugins/storyblok/index.d.ts",
            "import": "./dist/plugins/storyblok/index.js",
            "require": "./dist/plugins/storyblok/index.cjs"
        },
        "./css": "./dist/full.css",
        "./css/base": "./dist/base.css",
        "./css/theme": "./dist/theme.css",
        "./css/animations": "./dist/animations.css",
        "./prose/base": "./src/styles/prose/prose-base.css",
        "./prose/variants": "./src/styles/prose/prose-variants.css",
        "./prose/decorations": "./src/styles/prose/prose-decorations.css",
        "./preset": "./tailwind-preset.js",
        "./plugin": "./tailwind-plugin.js",
        "./themes": "./tailwind-themes.js"
    },
    "files": [
        "dist",
        "src/components",
        "src/styles/prose",
        "tailwind-preset.js",
        "tailwind-plugin.js",
        "tailwind-themes.js"
    ],
    "scripts": {
        "build": "tsup && npm run build:css",
        "build:css": "node scripts/build-css.cjs",
        "build:watch": "tsup --watch",
        "dev": "tsup --watch",
        "prepublishOnly": "npm run build",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:a11y": "playwright test --grep @a11y",
        "test:all": "npm run test:coverage && npm run test:e2e"
    },
    "peerDependencies": {
        "alpinejs": "^3.0.0",
        "astro": "^5.0.0",
        "tailwindcss": "^3.0.0"
    },
    "peerDependenciesMeta": {
        "@storyblok/astro": {
            "optional": true
        },
        "swiper": {
            "optional": true
        }
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.11.0",
        "@playwright/test": "^1.57.0",
        "@storyblok/astro": "^7.3.7",
        "@testing-library/dom": "^10.4.1",
        "@types/alpinejs": "^3.0.0",
        "@vitest/coverage-v8": "^4.0.16",
        "@vitest/ui": "^4.0.16",
        "autoprefixer": "^10.4.23",
        "cssnano": "^7.1.2",
        "happy-dom": "^20.0.11",
        "jsdom": "^27.0.1",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "postcss-import": "^16.1.1",
        "tsup": "^8.5.1",
        "typescript": "^5.0.0",
        "vitest": "^4.0.16"
    }
}